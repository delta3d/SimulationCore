<shaderlist>
      <shadergroup name="VolumeRenderingGroup">
      <shader name="ParticleVolumeShader" default="yes">
         <source type="Vertex">Shaders/Base/dynamic_light.frag</source>
         <source type="Vertex">Shaders/Base/spot_light.frag</source>
         <source type="Vertex">Shaders/Base/fragment_functions.frag</source>
         <source type="Vertex">Shaders/Base/particle_volume.vert</source>
         <source type="Fragment">Shaders/Base/particle_volume.frag</source>
         <source type="Fragment">Shaders/Base/fragment_functions.frag</source>
      </shader>
      <shader name="LightVolumeShader" default="yes">
         <source type="Vertex">Shaders/Base/dynamic_light.frag</source>
         <source type="Vertex">Shaders/Base/spot_light.frag</source>
         <source type="Vertex">Shaders/Base/fragment_functions.frag</source>
         <source type="Vertex">Shaders/Base/light_volume.vert</source>
         <source type="Fragment">Shaders/Base/light_volume.frag</source>
         <source type="Fragment">Shaders/Base/fragment_functions.frag</source>
      </shader>
      <shader name="FireVolumeShader" default="no">
         <source type="Vertex">Shaders/Base/fragment_functions.frag</source>
         <source type="Vertex">Shaders/Base/fire_volume.vert</source>
         <source type="Fragment">Shaders/Base/fire_volume.frag</source>
         <source type="Fragment">Shaders/Base/fragment_functions.frag</source>
      </shader>
   </shadergroup>
</shaderlist>