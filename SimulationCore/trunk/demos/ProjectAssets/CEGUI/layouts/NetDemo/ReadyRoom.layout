         <Property Name="UnifiedSize" Value="{{0.15,0},{0.075,0}}"/>
         <Property Name="UnifiedPosition" Value="{{-0.0625,0},{-0.2,0}}"/>
         <Property Name="AlwaysOnTop" Value="True"/>
         <Property Name="HorizontalAlignment" Value="Right"/>
