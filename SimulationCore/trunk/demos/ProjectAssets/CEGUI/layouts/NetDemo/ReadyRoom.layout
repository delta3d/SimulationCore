            <Window Name="ReadyRoom_PlayerListItem_01" Type="NetDemo/ListBoxItem">
               <Property Name="UnifiedSize" Value="{{0.10416667,0},{0.053333,0}}"/>
               <Property Name="UnifiedPosition" Value="{{0.0,0},{0.0,0}}"/>
               <Property Name="Text" Value="Player 1"/>
