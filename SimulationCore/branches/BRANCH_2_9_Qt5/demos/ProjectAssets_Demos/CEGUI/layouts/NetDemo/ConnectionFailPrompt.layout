      <Property Name="UnifiedPosition" Value="{{0.0,0},{0.0,0}}"/>
      
      <!-- TEXT - MESSAGE -->
      <Window Name="ConnectionFailPrompt_Button_Connect" Type="WindowsLook/StaticText">
